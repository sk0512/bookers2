<div class="row">
<div class="col-md-3">
<h2>User info</h2>
<%= attachment_image_tag user, :profile_image, size:"100x100", format:'jpeg', fallback:"no_image.jpg" %>
<table class="table">
  <tr>
    <th>name</th>
    <th><%= user.name %></th>
  </tr>
  <tr>
    <th>introduction</th>
    <th><%= user.introduction %></th>
  </tr>
</table>
<div class="row">
  <%= link_to edit_user_path(user.id) do %>
  <button class="btn btn-outline-secondary btn-block fas fa-user-cog" ></button>
  <% end %>
</div>

<h2>New book</h2>
<%= form_for(book) do |f| %>
  <div class="field row">
    <h4>Title</h4>
    <%= f.text_field :title %>
  </div>
  <div class="field row">
    <h4>Option</h4>
    <%= f.text_field :body %>
  </div>
  <div class="submit row">
  <%= f.submit 'Create Book', class:"btn btn-success"%>  
  </div>
<% end %>
</div>
</div>


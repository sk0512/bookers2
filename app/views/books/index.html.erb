<div class="container" style="margin-top: 70px">
  <div class="row">
    <div class="col-md-3">
      <%= render 'layouts/sidebar', user: @user, book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
    <% if flash[:notice] %>
      <p><%= flash[:notice] %></p>
    <% end %>
    <% if @book.errors.any? %>
    <div id="error_explanation">
      <h3><%= @book.errors.count %> error prohibited this obj from being saved:</h3>
      <ul>
      <% @book.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
    <% end %>

    <div class="col-md-3">
      <h2>Books</h2>
      <table class="table table-hover">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td><%= link_to (attachment_image_tag book.user, :profile_image, size:"40x40", format:'jpeg', fallback:"no_image.jpg"), user_path(book.user.id) %></td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
</div>

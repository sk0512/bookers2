<div class="container" style="margin-top: 70px">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <%= render 'layouts/sidebar', user: @user, book: @book %>
    </div>
    <div class="col-md-3">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= attachment_image_tag user, :profile_image, size:"50x50", format:'jpeg', fallback:"no_image.jpg" %></td>
            <td><%= user.name %></td>
            <td><%= link_to 'Show', user_path(user.id) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>